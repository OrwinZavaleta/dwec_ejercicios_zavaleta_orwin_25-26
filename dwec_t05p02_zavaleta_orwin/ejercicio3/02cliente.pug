                        <td>
                            <button class="btn btn-warning btn-detalle" type="button" id="verDetalleBoton"><i class="bi bi-eye-fill"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>John</td>
                        <td>Doe</td>
                        <td>@social</td>
                        <td>
                            <button class="btn btn-warning btn-detalle" type="button" id="verDetalleBoton"><i class="bi bi-eye-fill"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-3 col-12 mt-3 d-none" id="detalleCard"> 
            <div class="card">
                <img src="..." class="card-img-top" alt="...">
